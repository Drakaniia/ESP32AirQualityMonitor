rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Read access to sensor readings for authenticated users
    match /readings/{document} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
                       request.auth.uid == "esp32_device" ||
                       request.auth.uid == "admin_user";
    }
    
    // Device commands collection
    match /commands/{deviceId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
                       request.auth.uid == "admin_user";
    }
    
    // Device status tracking
    match /devices/{deviceId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
                       request.auth.uid == "esp32_device" ||
                       request.auth.uid == "admin_user";
    }
    
    // Users collection for authentication data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}